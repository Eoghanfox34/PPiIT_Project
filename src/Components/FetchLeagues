import React, { useState, useEffect } from 'react';
import axios from 'axios';

const FetchLeagues = () => {
    const [leagues, setLeagues] = useState([]);
    const [loading, setLoading] = useState(true);
    const [error, setError] = useState(null);

    useEffect(() => {
        const fetchLeagues = async () => {
            try {
                const response = await axios.get('https://api-football-v1.p.rapidapi.com/v3/leagues', {
                    headers: {
                        'x-rapidapi-key': 'YOUR_API_KEY',
                        'x-rapidapi-host': 'api-football-v1.p.rapidapi.com'
                    }
                });
                setLeagues(response.data.response); // Assuming the data is in response.data.response
                setLoading(false);
            } catch (err) {
                console.error('Failed to fetch leagues:', err);
                setError(err);
                setLoading(false);
            }
        };

        fetchLeagues();
    }, []);

    if (loading) return <p>Loading...</p>;
    if (error) return <p>Error loading data.</p>;

    return (
        <div>
            {leagues.map((league, index) => (
                <div key={index}>
                    <h3>{league.name}</h3>
                    {/* Display other league details here */}
                </div>
            ))}
        </div>
    );
};

export default FetchLeagues;
